---
type Props = {
  label: string;
  class?: string;
  [x: string]: any;
};

const { label, class: className, ...rest } = Astro.props as Props;
---

<label for="first-name">{label}</label>
<input
  class:list={[
    'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-orange-600 focus:border-orange-600 block w-full p-2.5 dark:bg-stone-500 dark:border-gray-600 dark:placeholder-gray-300 dark:text-white dark:focus:ring-orange-600 dark:focus:border-orange-600',
    className,
  ]}
  {...rest}
/>
